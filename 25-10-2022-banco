def cuentabancaria():
    saldo=0
    saldo=int(input("ingrese una cantidad: "))
    print("tienes: "+str(saldo))
    hola=True
    while(hola==True):
        deseo=int(input("Â¿cuanto desea retirar?: "))
        if(deseo<=saldo)and(deseo%5==0):
            hola=False
            saldo=(saldo-deseo)
            print("tiene"+str(saldo))
        if(deseo%5!=0):
            hola=True
            print("no se puede retirar esta cantidad")
        else:
            if(deseo>saldo):
                hola=True
                print("no hay suficiente saldo")
cuentabancaria()
